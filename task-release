#!/bin/bash
cd "$(dirname "$0")"
# Release a task (unclaim it without marking as complete)
# Usage: ./task-release <issue_number>
if [ $# -eq 0 ]; then
    echo "Usage: $0 <issue_number>"
    echo "Example: $0 1"
    echo "Note: This releases the task without marking it complete"
    exit 1
fi
python3 coordinator.py release "$1"